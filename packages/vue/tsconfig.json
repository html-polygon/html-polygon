{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    // Vue docs recommend this
    "strict": true,
    "outDir": "./dist",
    "removeComments": true,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./dist/types",
    // the base config sets this to true, so turn it to false here
    "noEmit": false,
  },
  "exclude": ["./node_modules"],
  "files": ["src/index.ts"]
}
